@page
@model CreateModel
@{
    ViewData["Title"] = "Add Workout";
}
<h1>Add Workout</h1>

<div class="row">
    <div class="col-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="BodyType.TypeName" class="control-label">
                <input asp-for="BodyType.TypeName" class="form-control" />
                <span asp-validation-for="BodyType.TypeName" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidaitonScriptsPartial");}
}